.view-addview #main .content-cols {
  .menu-hamburger {
    display: none;
  }

  & > .col-6 {
    max-width: 75%;
    flex: 1 0 50%;
  }
}

// temporary override
body:not(.section-controlpanel) .topics .ui.items .header {
  position: relative !important;
  top: auto;
  display: block;
  width: 100%;
  height: auto;
  align-items: unset;
  justify-content: unset;
}

.headings_navigation .ui.vertical.menu {
  width: 100%;
}

.block.align {
  &.right,
  &.left {
    z-index: unset;
  }
}

.mosaic-page-modal-open {
  &:not(.has-sidebar-collapsed).has-sidebar {
    .ui.fullscreen.modal.mosaic-modal {
      top: 2rem !important;
      left: 1rem !important;
      width: calc(100% - 400px) !important;
      transform: none !important;
    }
  }

  .sidebar-container {
    z-index: 9999;
  }
}
